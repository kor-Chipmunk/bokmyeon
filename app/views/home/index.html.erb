<script>
    
    $('#submitbtn').click(function() {
       $.ajax({
          type: "POST",
          url: "/home/write",
          data: $('#contentform').serialize(),
          success: function(json, status) {
            read();
            $('#content').val('');
          },
          error: function(data, status) {
              alert("서버 오류가 발생하였습니다!\n잠시 후에 다시 시도해 주세요!");
          }
       });
    });
    
    function read() {
        $.ajax({
            type: "GET",
            url: "/home/gethtml",
            success: function(html, status) {
                $('#contentbox').html(html);
            },
